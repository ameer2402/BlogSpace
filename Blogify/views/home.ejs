<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

  <style>
   
    
    .rounded-circle {
      border-radius: 50%;
      width: 40px;
      height: 40px;
      text-align: center;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
    }

    .card-img-top {
      width: 100%;  /* Ensures the image spans the card width */
      height: 300px; /* Sets a fixed height for all images */
      object-fit: cover; /* Crops the image to fit the set dimensions */
      object-position: center; /* Centers the image within the box */
    }

    .card {
      display: flex;
      flex-direction: column; /* Ensure content flows vertically */
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
  transform: translateY(-10px); /* Moves the card up slightly */
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Adds a shadow for a lifting effect */
}

    .card-body {
      
      flex: 1 1 auto; /* Allows the card body to grow and take available space */
      overflow: hidden;  /* Prevents overflowing content */
    }

  

    .row-cols-1 .col,
    .row-cols-sm-2 .col,
    .row-cols-md-3 .col {
      display: flex;
    }

    .col > .card {
      flex: 1; /* Ensures all cards have the same height */
    }

    .custom-button {
  border: 2px solid black; /* Purple border */
  color:black; /* Black text without hover */
  font: 12px Montserrat;
  text-transform: uppercase;
  padding: 10px;
  font-weight: 600;
  max-width: 150px;
  display: block;
  text-align: center;
  margin: 10px auto;
  position: relative;
  background-color: transparent; /* Transparent background */
  transition: all 0.3s ease-out; /* Smooth transition */
}

.custom-button:hover {
  background-color: #7c4dff; /* Purple background on hover */
  border-color: #7c4dff; /* Keep purple border */
  color: #fff; /* White text on hover */
}


    /* toast*/
    
    /* (CSS code for your toast notifications - already correct) */

</style>
<link rel="stylesheet" href="/css/styles.css">
<link rel="stylesheet" href="/css/footer.css">
<link rel="stylesheet" href="/css/spinner.css">



</head>


  <body onload="hideLoadingSpinner()">
    <!-- Include the loading spinner -->
    <%- include("./partials/spinner") %>
  <%- include("./partials/nav") %>
  <% if (toast && toast.message) { %>
    <%- include("./partials/toast") %>
<% } %>

  <div class="container mt-3">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% blogs.forEach(blog => { %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= blog.coverImage %>" class="card-img-top" alt="Blog Image" />
          <div class="card-body">
            <h5 class="card-title" style="font-weight: 700;"><%= blog.title %></h5>
            <p class="card-text">
            <%- blog.body.length > 100 ? blog.body.substring(0, 100) + '...' : blog.body %>
            </p>
            <a href="/blog/<%= blog._id %>" class="btn custom-button">Read more</a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  


  <%- include("./partials/footer") %>

  <%- include("./partials/script") %>
 
  <%- include("./partials/toastScript") %>

  
</body>
</html>
