<style>

  
  /* Default state: rectangular shape */
  .form-control {
    border-radius: 10px;
    border: 1px solid #ccc;
    transition: border-radius 0.3s ease;
  }

  /* Hover state: add border radius */
  .form-control:hover {
    border-radius: 35px;
  }

  /* Focus state: add border radius, remove shadow */
  .form-control:focus {
    border-radius: 35px;
    outline: none;
    box-shadow: none;
    border: 1px solid #007bff; /* Optional: Add a border color on focus */
  }

  /* Button Styling */
  .btn-outline-success {
    border-radius: 10px;
  }

  .nav-btn {
  border: 2px solid black; /* Purple border */
  color:black; /* Black text without hover */
  font: 12px Montserrat;
  text-transform: uppercase;
  padding: 10px;
  font-weight: 600;
  max-width: 150px;
  display: block;
  text-align: center;
  margin: 10px auto;
  position: relative;
  background-color: transparent; /* Transparent background */
  transition: all 0.3s ease-out; /* Smooth transition */
}

.nav-btn:hover {
  background-color: #7c4dff; /* Purple background on hover */
  border-color: #7c4dff; /* Keep purple border */
  color: #fff; /* White text on hover */
}

  
</style>

